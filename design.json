{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "name": "Adventure Quest Design System",
    "version": "1.0.0",
    "description": "A playful, gamified design system for children's entrepreneurship education (BizKids AI). Designed for young CEOs aged 9-13 with a focus on engagement, approachability, and gamification.",
    "designPrinciples": {
        "summary": "Fun, friendly, and encouraging - every element should feel like an adventure",
        "principles": [
            {
                "name": "Playful & Inviting",
                "description": "Use bright, cheerful colors and rounded shapes. Nothing should feel intimidating or corporate. Think 'friendly game' not 'business software'."
            },
            {
                "name": "Gamification First",
                "description": "Incorporate game-like elements: floating decorative icons, celebrations, progress bars, coin/star motifs, and achievement-style badges. Make progress feel rewarding."
            },
            {
                "name": "Large & Touch-Friendly",
                "description": "All interactive elements should be large and easy to tap. Minimum 44px touch targets. Generous padding and spacing throughout."
            },
            {
                "name": "Visual Feedback",
                "description": "Every interaction should have clear feedback: hover states, scale transforms, shadow changes, and animations. Users should always know what's clickable."
            },
            {
                "name": "Encouraging Language",
                "description": "Use positive, empowering copy. Replace 'Submit' with 'Let's Go!', 'Error' with 'Oops, let's try again'. Every message should feel supportive."
            },
            {
                "name": "Delightful Motion",
                "description": "Subtle floating animations, bounce effects, and celebration particles make the interface feel alive and magical."
            }
        ]
    },
