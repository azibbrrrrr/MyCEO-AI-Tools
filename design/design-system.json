{
    "$schema": "./design-system.schema.json",
    "version": "1.0.0",
    "lastUpdated": "2025-12-18",
    "overview": {
        "name": "KidBiz Tools Design System",
        "description": "A playful, child-friendly design system for young entrepreneurs aged 9-13. Built with React, Tailwind CSS, and shadcn/ui components.",
        "techStack": {
            "framework": "React 18+",
            "styling": "Tailwind CSS with CSS Variables",
            "components": "shadcn/ui (Radix UI primitives)",
            "icons": "Lucide React",
            "fonts": "Google Fonts (Nunito)"
        }
    },
    "designPrinciples": {
        "1_playful": {
            "title": "Playful but Professional",
            "description": "The design should feel fun and engaging while teaching real business skills. Use rounded corners, vibrant colors, and delightful animations.",
            "implementation": [
                "Use rounded-xl or rounded-2xl for all interactive elements",
                "Apply hover animations that scale or lift elements",
                "Include decorative elements like sparkles and floating shapes"
            ]
        },
        "2_encouraging": {
            "title": "Encouraging & Celebratory",
            "description": "Celebrate every step of progress. Kids should feel capable and excited.",
            "implementation": [
                "Use success colors (green) for completed states",
                "Add bounce-in or confetti animations for achievements",
                "Write encouraging copy and use emoji strategically"
            ]
        },
        "3_accessible": {
            "title": "Accessible & Easy to Navigate",
            "description": "Simple, clear navigation that kids can understand without help.",
            "implementation": [
                "Large touch targets (min 44px / h-11)",
                "Clear visual hierarchy with bold headings",
                "Consistent layout patterns across pages"
            ]
        },
        "4_delightful": {
            "title": "Delightful Micro-interactions",
            "description": "Surprise and delight with subtle animations and feedback.",
            "implementation": [
                "Apply hover effects to all interactive elements",
                "Use glow effects for primary CTAs",
                "Add staggered animations for lists and grids"
            ]
        }
    },
    "tokens": {
        "colors": {
            "cssVariableFormat": "hsl(var(--color-name))",
            "semantic": {
                "primary": {
                    "variable": "--primary",
                    "lightValue": "174 72% 46%",
                    "darkValue": "174 72% 50%",
                    "hex": "#14b8a6",
                    "description": "Vibrant teal - main brand color",
                    "usage": [
                        "Primary buttons",
                        "Links",
                        "Focus rings",
                        "Active states"
                    ]
                },
                "accent": {
                    "variable": "--accent",
                    "lightValue": "16 85% 65%",
                    "darkValue": "16 85% 60%",
                    "hex": "#f97316",
                    "description": "Coral orange - secondary emphasis",
                    "usage": [
                        "Secondary CTAs",
                        "Highlights",
                        "Decorative elements"
                    ]
                },
                "success": {
                    "variable": "--success",
                    "lightValue": "145 65% 45%",
                    "darkValue": "145 65% 50%",
                    "hex": "#22c55e",
                    "description": "Green - achievements and positive states",
                    "usage": [
                        "Completed tasks",
                        "Available items",
                        "Positive feedback"
                    ]
                },
                "warning": {
                    "variable": "--warning",
                    "lightValue": "38 92% 55%",
                    "darkValue": "38 92% 55%",
                    "hex": "#f59e0b",
                    "description": "Amber - attention states",
                    "usage": [
                        "In-progress items",
                        "Warnings",
                        "Ratings"
                    ]
                },
                "destructive": {
                    "variable": "--destructive",
                    "lightValue": "0 72% 60%",
                    "darkValue": "0 72% 55%",
                    "hex": "#ef4444",
                    "description": "Red - errors and critical actions",
                    "usage": [
                        "Error states",
                        "Delete actions",
                        "Critical warnings"
                    ]
                }
            },
            "surfaces": {
                "background": {
                    "variable": "--background",
                    "lightValue": "45 33% 97%",
                    "darkValue": "220 25% 12%",
                    "description": "Page background - warm cream (light) / dark navy (dark)"
                },
                "card": {
                    "variable": "--card",
                    "lightValue": "0 0% 100%",
                    "darkValue": "220 25% 16%",
                    "description": "Card surfaces - white (light) / dark slate (dark)"
                },
                "muted": {
                    "variable": "--muted",
                    "lightValue": "45 20% 93%",
                    "darkValue": "220 25% 20%",
                    "description": "Subtle backgrounds, disabled states"
                },
                "popover": {
                    "variable": "--popover",
                    "lightValue": "0 0% 100%",
                    "darkValue": "220 25% 16%",
                    "description": "Dropdown menus, tooltips, popovers"
                }
            },
            "text": {
                "foreground": {
                    "variable": "--foreground",
                    "lightValue": "220 25% 20%",
                    "darkValue": "45 20% 95%",
                    "description": "Primary text color"
                },
                "mutedForeground": {
                    "variable": "--muted-foreground",
                    "lightValue": "220 15% 45%",
                    "darkValue": "220 15% 60%",
                    "description": "Secondary text, descriptions"
                }
            },
            "borders": {
                "border": {
                    "variable": "--border",
                    "lightValue": "220 15% 88%",
                    "darkValue": "220 25% 25%"
                },
                "input": {
                    "variable": "--input",
                    "lightValue": "220 15% 88%",
                    "darkValue": "220 25% 25%"
                },
                "ring": {
                    "variable": "--ring",
                    "lightValue": "174 72% 46%",
                    "darkValue": "174 72% 50%"
                }
            }
        },
        "typography": {
            "fontFamily": {
                "primary": "'Nunito', sans-serif",
                "googleFontsImport": "@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800;900&display=swap');"
            },
            "fontWeights": {
                "normal": {
                    "value": 400,
                    "tailwind": "font-normal"
                },
                "medium": {
                    "value": 500,
                    "tailwind": "font-medium"
                },
                "semibold": {
                    "value": 600,
                    "tailwind": "font-semibold"
                },
                "bold": {
                    "value": 700,
                    "tailwind": "font-bold"
                },
                "extrabold": {
                    "value": 800,
                    "tailwind": "font-extrabold"
                },
                "black": {
                    "value": 900,
                    "tailwind": "font-black"
                }
            },
            "textStyles": {
                "hero": {
                    "classes": "text-4xl md:text-6xl font-black text-foreground",
                    "usage": "Main page titles, landing hero"
                },
                "section": {
                    "classes": "text-3xl md:text-4xl font-black text-foreground",
                    "usage": "Section headings"
                },
                "cardTitle": {
                    "classes": "text-2xl font-semibold leading-none tracking-tight",
                    "usage": "Card headers"
                },
                "componentTitle": {
                    "classes": "text-lg font-bold text-foreground",
                    "usage": "Tool cards, smaller headings"
                },
                "body": {
                    "classes": "text-base font-medium text-foreground",
                    "usage": "Standard body text, inputs"
                },
                "bodySmall": {
                    "classes": "text-sm text-muted-foreground leading-relaxed",
                    "usage": "Descriptions, helper text"
                },
                "caption": {
                    "classes": "text-xs font-semibold",
                    "usage": "Badges, labels"
                }
            }
        },
        "spacing": {
            "scale": {
                "0": "0px",
                "1": "4px (0.25rem)",
                "2": "8px (0.5rem)",
                "3": "12px (0.75rem)",
                "4": "16px (1rem)",
                "5": "20px (1.25rem)",
                "6": "24px (1.5rem)",
                "8": "32px (2rem)",
                "10": "40px (2.5rem)",
                "12": "48px (3rem)",
                "16": "64px (4rem)",
                "20": "80px (5rem)"
            },
            "componentDefaults": {
                "cardPadding": "p-6 (24px)",
                "toolCardPadding": "p-5 (20px)",
                "buttonPadding": "px-5 py-2",
                "buttonPaddingLarge": "px-8 py-6",
                "inputPadding": "px-4 py-3",
                "badgePadding": "px-2.5 py-0.5",
                "sectionPadding": "py-20 px-4",
                "containerPadding": "px-4 (1rem)"
            }
        },
        "borderRadius": {
            "cssVariable": "--radius: 1rem",
            "scale": {
                "none": "0",
                "sm": "calc(var(--radius) - 4px) = 12px",
                "md": "calc(var(--radius) - 2px) = 14px",
                "lg": "var(--radius) = 16px",
                "xl": "calc(var(--radius) + 4px) = 20px",
                "2xl": "calc(var(--radius) + 8px) = 24px",
                "full": "9999px"
            },
            "componentDefaults": {
                "button": "rounded-xl",
                "buttonLarge": "rounded-2xl",
                "buttonSmall": "rounded-lg",
                "card": "rounded-lg",
                "toolCard": "rounded-2xl",
                "input": "rounded-xl",
                "badge": "rounded-full",
                "iconContainer": "rounded-2xl",
                "modal": "sm:rounded-lg"
            }
        },
        "shadows": {
            "scale": {
                "sm": {
                    "variable": "--shadow-sm",
                    "value": "0 2px 8px -2px hsl(220 25% 20% / 0.08)",
                    "usage": "Subtle elevation, cards at rest"
                },
                "md": {
                    "variable": "--shadow-md",
                    "value": "0 8px 24px -8px hsl(220 25% 20% / 0.12)",
                    "usage": "Elevated cards, popovers"
                },
                "lg": {
                    "variable": "--shadow-lg",
                    "value": "0 16px 48px -12px hsl(220 25% 20% / 0.16)",
                    "usage": "Modals, card hover states"
                }
            },
            "special": {
                "glow": {
                    "variable": "--shadow-glow",
                    "value": "0 0 30px hsl(174 72% 46% / 0.3)",
                    "usage": "Primary button hover, CTA emphasis"
                },
                "accentGlow": {
                    "variable": "--shadow-accent-glow",
                    "value": "0 0 30px hsl(16 85% 65% / 0.3)",
                    "usage": "Accent button hover"
                }
            }
        },
        "gradients": {
            "hero": {
                "variable": "--gradient-hero",
                "value": "linear-gradient(135deg, hsl(174 72% 46%) 0%, hsl(190 80% 55%) 50%, hsl(200 85% 60%) 100%)",
                "tailwind": "from-primary to-cyan-400",
                "usage": "Hero backgrounds, gradient text, slider range"
            },
            "card": {
                "variable": "--gradient-card",
                "value": "linear-gradient(180deg, hsl(0 0% 100%) 0%, hsl(45 33% 98%) 100%)",
                "usage": "Subtle card depth"
            },
            "accent": {
                "variable": "--gradient-accent",
                "value": "linear-gradient(135deg, hsl(16 85% 65%) 0%, hsl(30 90% 60%) 100%)",
                "tailwind": "from-accent to-orange-400",
                "usage": "Accent buttons, icon backgrounds"
            },
            "success": {
                "variable": "--gradient-success",
                "value": "linear-gradient(135deg, hsl(145 65% 45%) 0%, hsl(160 70% 50%) 100%)",
                "tailwind": "from-success to-emerald-400",
                "usage": "Success states, achievements"
            },
            "fun": {
                "variable": "--gradient-fun",
                "value": "linear-gradient(135deg, hsl(280 70% 65%) 0%, hsl(320 75% 65%) 50%, hsl(16 85% 65%) 100%)",
                "usage": "Celebrations, premium features"
            }
        }
    },
    "animations": {
        "keyframes": {
            "fadeIn": {
                "from": "{ opacity: 0; transform: translateY(10px); }",
                "to": "{ opacity: 1; transform: translateY(0); }",
                "class": "animate-fade-in",
                "duration": "0.5s ease-out",
                "usage": "Content appearing, page load"
            },
            "scaleIn": {
                "from": "{ transform: scale(0.95); opacity: 0; }",
                "to": "{ transform: scale(1); opacity: 1; }",
                "class": "animate-scale-in",
                "duration": "0.3s ease-out",
                "usage": "Modal appearing, element focus"
            },
            "bounceIn": {
                "keyframes": "0%: scale(0.3), opacity(0) → 50%: scale(1.05) → 70%: scale(0.9) → 100%: scale(1), opacity(1)",
                "class": "animate-bounce-in",
                "duration": "0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55)",
                "usage": "Achievements, special moments"
            },
            "slideUp": {
                "from": "{ transform: translateY(20px); opacity: 0; }",
                "to": "{ transform: translateY(0); opacity: 1; }",
                "class": "animate-slide-up",
                "duration": "0.5s ease-out",
                "usage": "Cards appearing in sequence"
            },
            "popIn": {
                "keyframes": "0%: scale(0.8), opacity(0) → 50%: scale(1.05) → 100%: scale(1), opacity(1)",
                "class": "animate-pop-in",
                "duration": "0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55)",
                "usage": "Badges, chips, notifications"
            },
            "float": {
                "keyframes": "0%, 100%: translateY(0) → 50%: translateY(-10px)",
                "class": "animate-float",
                "duration": "3s ease-in-out infinite",
                "usage": "Decorative background elements"
            },
            "wiggle": {
                "keyframes": "0%, 100%: rotate(-3deg) → 50%: rotate(3deg)",
                "class": "animate-wiggle",
                "duration": "0.5s ease-in-out infinite",
                "usage": "Attention grabbing, playful emphasis"
            },
            "pulseGlow": {
                "keyframes": "0%, 100%: box-shadow(20px glow) → 50%: box-shadow(40px glow)",
                "class": "animate-pulse-glow",
                "duration": "2s ease-in-out infinite",
                "usage": "Primary CTA buttons"
            },
            "confetti": {
                "keyframes": "0%: translateY(0), rotate(0), opacity(1) → 100%: translateY(-100px), rotate(720deg), opacity(0)",
                "class": "animate-confetti",
                "duration": "1s ease-out forwards",
                "usage": "Celebrations, task completion"
            },
            "sparkle": {
                "keyframes": "0%, 100%: opacity(0), scale(0) → 50%: opacity(1), scale(1)",
                "class": "animate-sparkle",
                "duration": "1.5s ease-in-out infinite",
                "usage": "Decorative sparkle effects"
            }
        },
        "staggering": {
            "description": "Apply sequential delays to create cascading effects",
            "pattern": "style={{ animationDelay: `${index * 0.1}s` }}",
            "example": "0s, 0.1s, 0.2s, 0.3s for 4 cards"
        },
        "hoverInteractions": {
            "bounceHover": {
                "class": "bounce-hover",
                "styles": "hover:scale-105 active:scale-95 transition-transform duration-200",
                "usage": "Buttons, interactive cards"
            },
            "funCard": {
                "class": "fun-card",
                "styles": "hover:-translate-y-2 hover:shadow-lg transition-all duration-300",
                "usage": "Hoverable cards, previews"
            }
        }
    },
    "components": {
        "Button": {
            "importPath": "@/components/ui/button",
            "baseClasses": "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-xl text-sm font-bold ring-offset-background transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 active:scale-95",
            "variants": {
                "default": {
                    "classes": "bg-primary text-primary-foreground hover:bg-primary/90 hover:shadow-glow",
                    "usage": "Primary actions, main CTAs"
                },
                "accent": {
                    "classes": "bg-accent text-accent-foreground hover:bg-accent/90 hover:shadow-accent-glow",
                    "usage": "Secondary emphasis actions"
                },
                "success": {
                    "classes": "bg-success text-success-foreground hover:bg-success/90",
                    "usage": "Positive actions, confirmations"
                },
                "destructive": {
                    "classes": "bg-destructive text-destructive-foreground hover:bg-destructive/90",
                    "usage": "Delete, cancel, dangerous actions"
                },
                "outline": {
                    "classes": "border-2 border-border bg-card hover:bg-muted hover:border-primary/30 text-foreground",
                    "usage": "Secondary actions, cancel buttons"
                },
                "secondary": {
                    "classes": "bg-secondary text-secondary-foreground hover:bg-secondary/80",
                    "usage": "Less prominent actions"
                },
                "ghost": {
                    "classes": "hover:bg-muted hover:text-foreground text-muted-foreground",
                    "usage": "Tertiary actions, navigation"
                },
                "link": {
                    "classes": "text-primary underline-offset-4 hover:underline",
                    "usage": "In-line links"
                }
            },
            "sizes": {
                "default": {
                    "classes": "h-11 px-5 py-2",
                    "description": "Standard size"
                },
                "sm": {
                    "classes": "h-9 rounded-lg px-3 text-xs",
                    "description": "Compact size"
                },
                "lg": {
                    "classes": "h-14 rounded-2xl px-8 text-base",
                    "description": "Large CTAs"
                },
                "icon": {
                    "classes": "h-11 w-11 rounded-xl",
                    "description": "Icon-only buttons"
                }
            },
            "examples": {
                "primaryCTA": "<Button size=\"lg\" className=\"animate-pulse-glow\">Get Started <ArrowRight /></Button>",
                "secondary": "<Button variant=\"outline\">Learn More</Button>",
                "iconButton": "<Button variant=\"ghost\" size=\"icon\"><Settings /></Button>"
            }
        },
        "Card": {
            "importPath": "@/components/ui/card",
            "parts": {
                "Card": {
                    "classes": "rounded-lg border bg-card text-card-foreground shadow-sm",
                    "usage": "Container wrapper"
                },
                "CardHeader": {
                    "classes": "flex flex-col space-y-1.5 p-6",
                    "usage": "Title and description container"
                },
                "CardTitle": {
                    "classes": "text-2xl font-semibold leading-none tracking-tight",
                    "usage": "Card heading"
                },
                "CardDescription": {
                    "classes": "text-sm text-muted-foreground",
                    "usage": "Card subheading"
                },
                "CardContent": {
                    "classes": "p-6 pt-0",
                    "usage": "Main card content"
                },
                "CardFooter": {
                    "classes": "flex items-center p-6 pt-0",
                    "usage": "Card actions"
                }
            },
            "patterns": {
                "funCard": {
                    "description": "Interactive card with hover lift effect",
                    "classes": "fun-card transition-all duration-300 hover:-translate-y-2 hover:shadow-lg",
                    "usage": "Tool previews, feature cards"
                },
                "toolCard": {
                    "description": "Tool card with state badge and icon",
                    "classes": "p-5 rounded-2xl border-2 border-border bg-card",
                    "structure": [
                        "State badge at top",
                        "Icon container with colored bg",
                        "Title",
                        "Description"
                    ]
                }
            }
        },
        "Badge": {
            "importPath": "@/components/ui/badge",
            "baseClasses": "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors",
            "variants": {
                "default": "border-transparent bg-primary text-primary-foreground hover:bg-primary/80",
                "secondary": "border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80",
                "destructive": "border-transparent bg-destructive text-destructive-foreground hover:bg-destructive/80",
                "outline": "text-foreground"
            },
            "statePatterns": {
                "available": {
                    "classes": "bg-success/10 text-success",
                    "icon": "Sparkles"
                },
                "inProgress": {
                    "classes": "bg-warning/10 text-warning",
                    "icon": "Clock"
                },
                "completed": {
                    "classes": "bg-primary/10 text-primary",
                    "icon": "CheckCircle"
                },
                "comingSoon": {
                    "classes": "bg-muted text-muted-foreground",
                    "icon": "Lock"
                },
                "locked": {
                    "classes": "bg-muted text-muted-foreground",
                    "icon": "Lock"
                }
            }
        },
        "Input": {
            "importPath": "@/components/ui/input",
            "classes": "flex h-12 w-full rounded-xl border-2 border-border bg-card px-4 py-3 text-base font-medium ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:border-primary disabled:cursor-not-allowed disabled:opacity-50 transition-all duration-200",
            "features": [
                "Generous height (h-12) for touch targets",
                "Thick border (border-2) for visibility",
                "Smooth focus transition with primary color ring"
            ]
        },
        "Select": {
            "importPath": "@/components/ui/select",
            "parts": {
                "SelectTrigger": {
                    "classes": "flex h-10 w-full items-center justify-between rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                },
                "SelectContent": {
                    "classes": "relative z-50 max-h-96 min-w-[8rem] overflow-hidden rounded-md border bg-popover text-popover-foreground shadow-md",
                    "animations": "animate-in fade-in-0 zoom-in-95"
                },
                "SelectItem": {
                    "classes": "relative flex w-full cursor-default select-none items-center rounded-sm py-1.5 pl-8 pr-2 text-sm outline-none focus:bg-accent focus:text-accent-foreground data-[disabled]:pointer-events-none data-[disabled]:opacity-50"
                }
            }
        },
        "Switch": {
            "importPath": "@/components/ui/switch",
            "track": {
                "classes": "peer inline-flex h-6 w-11 shrink-0 cursor-pointer items-center rounded-full border-2 border-transparent transition-colors",
                "states": {
                    "checked": "data-[state=checked]:bg-primary",
                    "unchecked": "data-[state=unchecked]:bg-input"
                }
            },
            "thumb": {
                "classes": "pointer-events-none block h-5 w-5 rounded-full bg-background shadow-lg ring-0 transition-transform",
                "states": {
                    "checked": "data-[state=checked]:translate-x-5",
                    "unchecked": "data-[state=unchecked]:translate-x-0"
                }
            }
        },
        "Slider": {
            "importPath": "@/components/ui/slider",
            "root": "relative flex w-full touch-none select-none items-center",
            "track": "relative h-4 w-full grow overflow-hidden rounded-full bg-muted",
            "range": {
                "classes": "absolute h-full rounded-full",
                "style": "background: var(--gradient-hero)"
            },
            "thumb": {
                "classes": "block h-8 w-8 rounded-full border-4 border-primary bg-card shadow-md ring-offset-background transition-all duration-200",
                "hover": "hover:scale-110",
                "active": "active:scale-95"
            }
        },
        "Tabs": {
            "importPath": "@/components/ui/tabs",
            "TabsList": {
                "classes": "inline-flex h-10 items-center justify-center rounded-md bg-muted p-1 text-muted-foreground"
            },
            "TabsTrigger": {
                "classes": "inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium ring-offset-background transition-all",
                "active": "data-[state=active]:bg-background data-[state=active]:text-foreground data-[state=active]:shadow-sm"
            },
            "TabsContent": {
                "classes": "mt-2 ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
            }
        },
        "Dialog": {
            "importPath": "@/components/ui/dialog",
            "DialogOverlay": {
                "classes": "fixed inset-0 z-50 bg-black/80",
                "animations": "data-[state=open]:animate-in data-[state=closed]:animate-out data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0"
            },
            "DialogContent": {
                "classes": "fixed left-[50%] top-[50%] z-50 grid w-full max-w-lg translate-x-[-50%] translate-y-[-50%] gap-4 border bg-background p-6 shadow-lg sm:rounded-lg",
                "animations": "duration-200 data-[state=open]:animate-in data-[state=closed]:animate-out data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0 data-[state=closed]:zoom-out-95 data-[state=open]:zoom-in-95"
            },
            "DialogTitle": "text-lg font-semibold leading-none tracking-tight",
            "DialogDescription": "text-sm text-muted-foreground"
